<div class='banner'>
  <h1>VIRTUAL CHEQUE</h1>
</div>

<p>
<!-- Will be uncommented once users are implimented -->
<!-- <%= button_to("Back", login_index_path, :method => "get") %> -->
</p>
<h2>Generate New Cheque:</h2>
<%= button_to("Create New Cheque",  new_cheque_path, :method => 'get') %>
&nbsp;
<h2>Previously Generated Cheques:</h2>
<p>Click on name to filter list</p>
<table>
  <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Value</th>
      <th colspan='2'><%= button_to("Clear Filters", cheques_path,
                        method: :get) %></th>
  </tr>
  <% for @cheque in @cheques %>
    <tr>
      <td><%= link_to @cheque.name, cheques_path(:name => @cheque.name) %></td>
      <td><%= @cheque.date %></td>
      <td> $<%= number_with_delimiter(
              number_with_precision(@cheque.nominal_value, precision: 2)) %></td>
      <td><%= button_to("Show", cheque_path(@cheque),
                      method: :get) %></td>
      <td><%= button_to("Delete", cheque_path(@cheque),
                      method: :delete,
                      data: { confirm: 'Are you sure?'} ) %></td>
    </tr>
  <% end %>
</table>


