<div class='banner'>
  <h1>VIRTUAL CHEQUE</h1>
</div>

<h2>New Cheque</h2>

<!-- Using rails default form builder below -->
<%= form_for :cheque, url: cheques_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
	<p>
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :nominal_value %><br>
    <%= f.number_field :nominal_value , step: 0.01%>
  </p>
  <p>
    <%= f.submit "Create Cheque"%>
    <%= link_to 'Cancel', cheques_path%>
  </p>
<% end %>
